{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["dom", "es2015"],
        "declaration": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "*": ["sys/modules/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
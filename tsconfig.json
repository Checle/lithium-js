{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "declaration": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "build",
        "rootDir": "src"
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test",
        "build",
        "src/apps"
    ]
}

{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "declaration": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src"
    },
    "include": [
        "src/**/*",
        "typings/**/*"
    ],
    "exclude": [
        "node_modules",
        "test",
        "build"
    ]
}

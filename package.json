{
  "name": "record-js",
  "version": "0.0.2",
  "description": "JavaScript implementation of a universal blockchain OS",
  "main": "dist/r.js",
  "scripts": {
    "prepublish": "npm run dist",
    "test": "node test/index.js && npm run lint",
    "lint": "find src/ -name '*.ts' -print0 | xargs -0 -n1 eslint",
    "console": "node bin/console.js",
    "dist": "find . -name '*.ts' | xargs tsc --rootDir src/ --outDir dist/ --moduleResolution node"
  },
  "bin": {
    "record": "bin/record.js"
  },
  "preferGlobal": "true",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checle/record-js.git"
  },
  "author": "Filip Dal√ºge <daluege@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/checle/record-js/issues"
  },
  "homepage": "https://github.com/checle/record-js#readme",
  "devDependencies": {
    "devtool": "^2.0.3",
    "eslint": "^3.3.1",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "tape": "^4.6.0",
    "typescript": "^1.8.10",
    "typescript-eslint-parser": "^0.1.2",
    "webpack": "^1.13.1"
  }
}
